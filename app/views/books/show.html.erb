<div>
  <%= flash[:notice] %>
</div>

<%= render 'left', user: @user, book: @newbook %>



  <div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
 <table class="table">
  <tbody>
   <tr>
    <td>
     <%= link_to user_path(@user) do %>
     <%= image_tag @user.get_profile_image %>
     <br>
     <%= @user.name %>
     <% end %>
    </td>
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book.id) %></td>
      <% end %>
    <td>
      <% if @book.user == current_user %>
      <%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %>
      <% end %>
     </td>
    </tr>
   </tbody>
  </table>
  </div>
 </div>
</div>